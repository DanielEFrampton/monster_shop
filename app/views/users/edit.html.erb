<h2>Update Your Profile Information</h2>

<%= form_tag "/profile", method: :patch do %>

  <%= label_tag :name %>
  <%= text_field_tag :name, current_user.name %>

  <%= label_tag :address %>
  <%= text_field_tag :address, current_user.address %>

  <%= label_tag :city %>
  <%= text_field_tag :city, current_user.city %>

  <%= label_tag :state %>
  <%= text_field_tag :state, current_user.state %>

  <%= label_tag :zip %>
  <%= text_field_tag :zip, current_user.zip %>

  <%= label_tag :email %>
  <%= text_field_tag :email, current_user.email%>

  <%= label_tag :password %>
  <%= text_field_tag :password %>

  <%= label_tag :password_confirmation %>
  <%= text_field_tag :password_confirmation %>

  <%= submit_tag "Update Info" %>

<% end %>
