Admin Dashboard

<% unless @orders.empty? %>
  <table>
    <tr>
      <th>Order ID</th>
      <th>Date</th>
      <th>User</th>
    </tr>
  <% @orders.each do |order| %>
    <tr id="order-<%= order.id %>">
      <td><%= order.id %></td>
      <td><%= order.created_at %></td>
      <td><%= link_to order.user.name, "/admin/users/#{order.user.id}" %></td>
    </tr>
  <% end %>
<% end %>
